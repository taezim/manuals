package com.springmvc.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import com.springmvc.domain.StdReservation;
import com.springmvc.repository.SRRepository;

public class SRServiceImpl implements SRService
{
	@Autowired
	SRRepository srr;
	
	
	@Override
	public List<StdReservation> readAllReservation(String memberId) 
	{
		return srr.readAllReservation(memberId);
	}

	@Override
	public StdReservation readStdReservationById(String reservationId) 
	{	
		return srr.readStdReservationById(reservationId);
	}

	@Override
	public void setNewSR(StdReservation SR) 
	{
		srr.setNewSR(SR);
	}

	@Override
	public void setUpdateSR(StdReservation SR) 
	{
		srr.setUpdateSR(SR);
	}

	@Override
	public void setCancelSR(String reservationId) 
	{
		srr.setCancelSR(reservationId);
	}

}
