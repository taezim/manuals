package com.springmvc.controller;



import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import com.springmvc.api.CsvToJsonConverter;
import com.springmvc.domain.Stadium;

@Controller
public class StadiumJsonController 
{

	@GetMapping("/json")
	public String goToThanks(Model model) 
	{
		List<Stadium> listOfStd = CsvToJsonConverter.getContvertedStadium();
		model.addAttribute("stadiumList", listOfStd);	
		
		return "/Stadium/stadiums";
	}
 
	
	
}