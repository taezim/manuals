    }
	
	
	@Override
	public List<StdReservation> readAllReservation(String memberId) 
	{
		  String sql = "SELECT * FROM std_reservation WHERE user_id = ?";
	        return jdbcTemplate.query(sql, new SRRowMapper(), memberId);
	}

