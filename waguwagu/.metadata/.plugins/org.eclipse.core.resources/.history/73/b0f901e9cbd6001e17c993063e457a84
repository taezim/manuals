package com.springmvc.controller;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping("/csv")
public class StadiumJsonController 
{

    @GetMapping("/your-page")
    public String yourPage(Model model) {
        // CSV to JSON 변환 코드를 가져와서 JSON 데이터를 생성
        JSONArray jsonArray = convertCsvToJson();

        // 모델에 JSON 데이터 추가
        model.addAttribute("jsonData", jsonArray.toString(2));

        // 뷰 페이지 이름 반환 (your-page.jsp, your-page.html 등)
        return "your-page";
    }

    private JSONArray convertCsvToJson() {
        String csvFilePath = "src/main/resources/csv/stadiumInGN.csv"; // CSV 파일 경로
        String encoding = "EUC-KR"; // 파일의 인코딩 지정

        try (FileInputStream fileInputStream = new FileInputStream(csvFilePath);
             InputStreamReader reader = new InputStreamReader(fileInputStream, encoding);
             CSVParser csvParser = new CSVParser(reader, CSVFormat.DEFAULT.withFirstRecordAsHeader())) {

            JSONArray jsonArray = new JSONArray();
            for (CSVRecord csvRecord : csvParser) {
                JSONObject jsonObject = new JSONObject();
                csvRecord.toMap().forEach((key, value) -> jsonObject.put(key, value));
                jsonArray.put(jsonObject);
            }

            return jsonArray;

        } catch (Exception e) {
            e.printStackTrace();
            return new JSONArray(); // 예외 발생 시 빈 JSON 배열 반환
        }
    }
}
