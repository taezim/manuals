package com.springmvc.controller;

import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.springmvc.domain.Stadium;
import com.springmvc.domain.StdReservation;
import com.springmvc.repository.OrderRepositoryImpl;
import com.springmvc.service.SRService;
import com.springmvc.service.StadiumService;

@Controller
@RequestMapping("/stadium")
public class StdReservationConroller 
{
	
	@Autowired 
	SRService srs;
	
	@Autowired
	StadiumService stdService;
	

	@GetMapping("/reserve") 
	public String requestRegistForm(@ModelAttribute("stdReservation")StdReservation SR, @RequestParam String stadiumId, Model model, HttpServletRequest request) // 파라미터는 
	{
		System.out.println("@GetMapping reserve 도착" ); // 받아온 파라미터 값을 콘솔에서 확인
		String userId = request.getSession().getId();
		Stadium std = stdService.readStadiumById(stadiumId);
		model.addAttribute("std", std);
		model.addAttribute("id", userId);
		return "/Stadium/StdReservForm"; // 수강 신청 form 페이지 리턴
	}
		
	@PostMapping("/reserve")
	public String confirmRegistForm(@ModelAttribute("stdReservation")StdReservation SR, Model model) 
	{
		System.out.println("스쓰나: "+ SR.getStdId());
		model.addAttribute("sr",SR);
		return "/Stadium/ReservationConfirm";
	}
	
	@PostMapping("/confirm")
	public String submitReservationForm(@ModelAttribute("stdReservation")StdReservation SR, Model model) 
	{
		System.out.println("컨쓰나: "+ SR.getStdId());
		String insertDate = OrderRepositoryImpl.getTimeNow();
		SR.setInsertDate(insertDate);
		srs.setNewSR(SR);
		return "/Lesson/Thanks";
		
	}
	@GetMapping("/myReserve")
	public String readMyLessonRegistration(Model model, HttpServletRequest req) 
	{
		String id = req.getSession().getId();
		List<StdReservation> listOfReserv = srs.readAllReservation(id);
		model.addAttribute("list",listOfReserv);
		return "/Stadium/ReservationList";
	}
	
	
	
}
