import org.springframework.jdbc.core.RowMapper;

import com.springmvc.domain.StdReservation;

import java.sql.ResultSet;
import java.sql.SQLException;

public class SRRowMapper implements RowMapper<StdReservation> {

    @Override
    public StdReservation mapRow(ResultSet rs, int rowNum) throws SQLException {
        StdReservation stdReservation = new StdReservation();

        stdReservation.setReservId(rs.getLong(1)); // reserv_id
        stdReservation.setStdId(rs.getString(2));
        stdReservation.setStdName(rs.getString(3));
        stdReservation.setStdFilename(rs.getString(4));
        stdReservation.setInsertDate(rs.getString(5)); // insert_date
        stdReservation.setReservDate(rs.getString(6));
        stdReservation.setStartTime(rs.getString(7));
        stdReservation.setEndTime(rs.getString(8));
        stdReservation.setUserId(rs.getString(9));
        stdReservation.setUserName(rs.getString(10));
        stdReservation.setUserPhone(rs.getString(11));
        stdReservation.setTeamId(rs.getString(12));
        stdReservation.setTeamName(rs.getString(13));
        stdReservation.setMemNumber(rs.getInt(14)); // mem_number
        stdReservation.setBookingFee(rs.getInt(15)); // booking_fee
        stdReservation.setBookingStatus(rs.getString(16)); // booking_status
        stdReservation.setIsPaid(rs.getBoolean(17)); // isPaid

        return stdReservation;
    }
}
